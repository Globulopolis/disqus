<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>plg_content_disqus</name>
	<author>Viper</author>
	<creationDate>September 2013</creationDate>
	<copyright></copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>web@libra.ms</authorEmail>
	<authorUrl>www.киноархив.com</authorUrl>
	<version>0.2</version>
	<description>PLG_CONTENT_DISQUS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="disqus">disqus.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_disqus.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_content_disqus.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_content_disqus.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.plg_content_disqus.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="jquery" type="list" default="0" label="PLG_CONTENT_DISQUS_PARAMS_JQ">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="shortname" type="text" default="" size="30" label="PLG_CONTENT_DISQUS_PARAMS_SHORTNAME" description="PLG_CONTENT_DISQUS_PARAMS_SHORTNAME_DESC" required="true" class="span6 required" filter="string" />
				<field name="selector" type="text" default="article, .items-leading" size="30" label="PLG_CONTENT_DISQUS_PARAMS_SELECTOR" description="PLG_CONTENT_DISQUS_PARAMS_SELECTOR_DESC" required="true" class="span6 required" filter="string" />
				<field name="counter" type="list" default="0" label="PLG_CONTENT_DISQUS_PARAMS_COUNTER" description="PLG_CONTENT_DISQUS_PARAMS_COUNTER_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
